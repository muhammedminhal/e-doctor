
{{>header2}}

<div style="padding-left: 280px; ">
<h1>Booking</h1>
<form action="/patient/profile" method="post">
 <input type="hidden" name="_id" value="">  
 <div  class="col-sm-8 offset-md-6" style="background-color: rgb(13, 15, 15);margin-top: 25px;padding-bottom:20px;padding-top:20px">
  
  <div class="form-group">
    <label for="staticEmail" >Email</label>
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" name="email" value="{{patient.email}}">
    </div>
         <div class="form-group">
    <label for="staticEmail" >Name</label>
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" name="name" value="{{patient.name}} ">
    </div>  
         <div class="form-group">
    <label for="staticEmail" >Mobile</label>
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" name="mobile" value="{{patient.mobile}} ">
    </div> 
             <div class="form-group">
                <label for="age">age</label>
                <input type="number"  placeholder="age" name="age" class="form-control">
            </div>
            <div class="form-group">
                <label for="date">date</label>
                <input type="date"  placeholder="date" name="date" class="form-control">
            </div> 
            <div class="form-group">
                <label for="time">time</label>
                <input type="time"  placeholder="time" name="time" class="form-control">
            </div>
             <div class="form-group col-sm-6">
      <label for="doctor">doctor</label>
      <select id="doctor" class="form-control"  name="doctor">
        <option selected>Nil..</option>
        {{#each doctor}}
        <option >{{this.name}}</option>
        {{/each}}
       
        </div>
      </select>
    </div>
              <div class="form-group col-sm-6">
      <label for="specified">specified</label>
      <select id="specified" class="form-control"  name="specified">
        <option selected>Nil..</option>
       	<option value="Gynaecology">Gynaecology</option>                                    
				<option value="Haematology">Haematology</option>
         <option value="Nephrology">Nephrology</option>
				<option value="Neurology">Neurology</option>
         <option value="Oncology">Oncology</option>
				<option value="Ophthalmology">Ophthalmology</option>
       <option value="Orthopaedics">Orthopaedics</option>
        </div>
      </select>
    </div>
            <div class="form-group col-md-4 clearfix " style="padding-Top: 20px;padding-left:236px;" > 
            <button type="submit" class="btn btn-primary pull-left ">ADD</button>
            </div>
            </div>
        </form>
    </div>
</div>
</div>
</div>

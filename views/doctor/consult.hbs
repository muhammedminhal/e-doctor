{{>header}}

<div class="container">    
        
    <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3"> 
       
        
        <div class="panel panel-default" style="    margin-top: 151px;" >
            <div class="panel-heading">
                <div class="panel-title text-center">patient {{hell.name}}'s prescription</div>
            </div>     

       

                <form name="form" id="form" class="form-horizontal"  action="/doctor/consult?id={{hell.email}}" method="post">
                   
                    <div class="input-group">
                       
                        <input type="hidden" id="email" type="text" class="form-control" name="email" value="{{hell.email}}" placeholder="email">                                        
                    </div>

                    <div class="input-group">
                                                <input id="medicine" type="medicine" class="form-control" name="medicine" placeholder="medicine" required>
                      
                    </div> 
                     <button type="submit" href="#" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-log-in"></i> Add</button>   
                    <div class="table" style="    margin-left: 214px;">
                        <table>
                            <thead >
                                <tr>
                                    <th></th>
                                <th></th>
                                </tr>
                                
                            </thead>
                            <tbody>
                                {{#each data}}
                                <tr>
<td>{{this.medicine}}</td>
  <td><a href="/doctor/remove/{{this._id}}" ><button type="button" style="font-size: 12px;" class="btn btn-primary"><i class="fas fa-trash fa-lg" style="font-size: 12px;" aria-hidden="true"></button></i></a></td> 

                                </tr>
                                {{/each}}
                            </tbody>
</table>

                    </div>
                     <div class="input-group">
                        
                        <textarea id="comments" type="comments" class="form-control" name="comments" placeholder="comments"></textarea>
                        
                    </div>                                                                 

                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                                                  
                        </div>
                    </div>

                </form>     

            </div>                     
        </div>  
    </div>
</div>

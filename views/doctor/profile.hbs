
{{>header}}
       {{!-- neq --}}

       <div class="container">    
        
    <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3"> 
        
        <div class="row">                
            <div class="iconmelon">
              <svg viewBox="0 0 32 32">
                <g filter="">
                  <use xlink:href="#git"></use>
                </g>
              </svg>
            </div>
        </div>
                <form name="form" id="form" class="form-horizontal" enctype="multipart/form-data" action="/doctor/profile" method="post">
                  
                   <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input style="text-transform:uppercase" type="name" class="form-control" name="name" placeholder="Name" value="{{doctor.name}}"  >
                    </div> 

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input  type="text" class="form-control" name="email" value="{{doctor.email}}" placeholder="email" >                                        
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input  type="blood" class="form-control" name="blood" placeholder="blood" value="{{doctor.blood}}">
                    </div>     

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                        <input  type="string" class="form-control" name="mobile" placeholder="mobile" value="{{doctor.mobile}}">
                    </div> 

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-road"></i></span>
                        <input  type="text" class="form-control" name="city" placeholder="city" value="{{doctor.city}}">
                    </div>  

                     <div class="input-group">
                       

                    <div class="form-group">

                      

                </form>     

            </div>                     
        </div>  
    </div>
</div>

 {{>footer}}
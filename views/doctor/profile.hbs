
{{>header}}

   

<div class="container px-3"></div>

<div class=" row">
    <div style="padding-left: 280px; padding-top:1px">
   <div  class="col-sm-8 offset-md-6" style="background-color: rgb(13, 15, 15);margin-top: 25px;padding-bottom:20px;padding-top:20px">
        <h1>My Details</h1>
       
        <form action="/doctor/profile" method="post">
 <div class="form-group col-md-6">
    <label for="staticEmail" class="col-md-3 col-form-label">Name</label>
    <div class="col-md-6">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{doctor.name}}">
    </div>
  </div>
 <div class="form-group col-md-6">
    <label for="staticEmail" class="col-md-3 col-form-label">Email</label>
    <div class="col-md-6">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{doctor.email}}">
    </div>
  </div>
   <div class="form-row">
   <div class="form-group col-md-6">
    <label for="staticEmail" class="col-md-3 col-form-label">Mobile</label>
    <div class="col-md-6">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{doctor.mobile}}">
    </div>
  </div>
   <div class="form-group col-md-6">
    <label for="staticEmail" class="col-md-3 col-form-label">City</label>
    <div class="col-md-8">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{doctor.city}}">
    </div>
    <div class="form-row" >
     <div class="form-group col-sm-2" >
    <label for="staticEmail" class="col-md-6 col-form-label">Blood</label>
    <div class="col-md-8">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{doctor.blood}}">
    </div>
     <div class="form-group col-md-6">
    <label for="staticEmail" class="col-md-6 col-form-label">Specialized</label>
    <div class="col-md-8">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{doctor.specialized}}">
    </div>
  </div>
  </div>
 </form>
       